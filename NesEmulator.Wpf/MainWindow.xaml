<Window x:Class="NesEmulator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nes Emulator" Height="800" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Sprites" Click="ButtonSprites_OnClick"></Button>
                <Button Content="Background" Click="ButtonBackground_OnClick"></Button>
                <Button Content="Emulator" Click="ButtonEmulator_OnClick"></Button>
            </StackPanel>
        </Grid>

        <Grid Row="1">
            <ContentControl
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="10"
                Name="Content" />
        </Grid>
    </Grid>

</Window>